<?xml version="1.0"?>
<project default="cargo:dist" xmlns:j="jelly:core" xmlns:maven="jelly:maven" xmlns:ant="jelly:ant">

  <!-- Verify that required plugins are installed -->
  <preGoal name="build:start">
    <maven:get plugin="maven-checkstyle-plugin" property="plugin" var="checkstylePlugin" />
    <j:if test="${checkstylePlugin.currentVersion.compareTo('2.5') lt 0}">
      <ant:fail>
        Must have Checkstyle plugin v2.5 or greater installed to build Cargo.
        Try: maven plugin:download -DgroupId=maven -DartifactId=maven-checkstyle-plugin -Dversion=[version]
      </ant:fail>
    </j:if>
  </preGoal>
  
</project>
